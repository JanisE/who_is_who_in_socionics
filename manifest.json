{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_AddonName__",
    "description": "__MSG_AddonDescription__",
    "author": "JƒÅnis Elmeris",
    "version": "1.1.0",
    "options_ui": {
        "page": "ui/settings.html"
    },
    "browser_action": {
        "default_icon": "ui/icon.png",
        "default_title": "__MSG_AddonName__"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file:///*/*"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": false
    },
    "icons": {
        "48": "ui/icon.png",
        "64": "ui/icon64.png"
    }
}
